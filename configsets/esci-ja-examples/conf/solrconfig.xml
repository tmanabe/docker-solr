<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <!-- Ref: https://github.com/apache/solr/blob/branch_9_2/solr/server/solr/configsets/_default/conf/solrconfig.xml -->

    <luceneMatchVersion>9.4</luceneMatchVersion>

    <lib dir="./lib"/>

    <searchComponent name="demo2Component" class="io.github.tmanabe.demo2.Demo2SearchComponent"/>

    <requestHandler name="/select" class="solr.SearchHandler">
        <lst name="defaults">
            <str name="echoParams">explicit</str>
            <int name="rows">10</int>
        </lst>
        <arr name="last-components">
            <str>demo2Component</str>
        </arr>
    </requestHandler>

    <schemaFactory class="ClassicIndexSchemaFactory"/>
</config>
